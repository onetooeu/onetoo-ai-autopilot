{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/contrib-decision.v2.schema.json",
  "title": "ONETOO contrib decision v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "submission_id",
    "decision",
    "score",
    "threshold",
    "policy_version",
    "signals",
    "reasons",
    "decided_at",
    "decided_by"
  ],
  "properties": {
    "schema": { "const": "onetoo.contrib-decision.v2" },
    "submission_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "decision": { "enum": ["reject", "sandbox", "stable", "quarantine"] },
    "score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "threshold": { "type": "integer", "minimum": 0, "maximum": 100 },
    "policy_version": { "type": "string", "minLength": 3, "maxLength": 128 },
    "signals": {
      "type": "object",
      "additionalProperties": { "type": "integer", "minimum": -100, "maximum": 100 }
    },
    "reasons": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": { "type": "string", "minLength": 2, "maxLength": 240 }
    },
    "decided_at": { "type": "string", "format": "date-time" },
    "decided_by": { "type": "string", "minLength": 2, "maxLength": 64 }
  }
}
