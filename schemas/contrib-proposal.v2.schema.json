{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "onetoo.contrib-proposal.v2",
  "title": "ONETOO Contrib Proposal v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "submission_id",
    "decision",
    "policy_version",
    "decided_at",
    "submission"
  ],
  "properties": {
    "schema": {
      "const": "onetoo.contrib-proposal.v2"
    },
    "submission_id": {
      "type": "string"
    },
    "decision": {
      "enum": [
        "reject",
        "sandbox",
        "stable"
      ]
    },
    "score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "threshold": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "policy_version": {
      "type": "string"
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "decided_at": {
      "type": "string",
      "format": "date-time"
    },
    "submission": {
      "$ref": "https://onetoo.eu/schemas/contrib-submission.v2.schema.json"
    }
  }
}
